<h1 class="display-4 text-capitalize my-4">Dev Idea</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
    <form class="card card-body" action="/ideas/add" method="POST">
        <label class="form-group d-block" for="title"> Title:
            <input required="required" id="title" name="title" type="text" class="form-control mt-2" value="{{title}}">
        </label>
        <label class="form-group d-block" for="details"> Details:
            <textarea required="required" id="details" name="details" class="form-control mt-2">{{details}}</textarea>
        </label>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
</div>
</div>



