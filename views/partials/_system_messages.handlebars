{{#if success_msg}}
    <p class="alert alert-success text-center">{{success_msg}}<button type="button" class="close" data-dismiss="alert">&times;</button></p>
{{/if}}

{{#if error_msg}}
    <p class="alert alert-danger text-center">{{error_msg}}<button type="button" class="close" data-dismiss="alert">&times;</button></p>
{{/if}}